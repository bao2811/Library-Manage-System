<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" stylesheets="@../styles/Ui.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.controller.UserController">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 10px;">
            <Label text="Library User Portal" styleClass="title-label">
                <font>
                    <Font name="Arial Bold" size="28.0" />
                </font>
            </Label>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20px;">
            <!-- Search Section -->
            <VBox spacing="10.0" styleClass="section">
                <Label text="Search Books" styleClass="section-title">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>

                <!-- Search Input Fields -->
                <HBox spacing="10.0">
                    <TextField fx:id="searchTitleField" promptText="Enter book title" />
                    <TextField fx:id="searchAuthorField" promptText="Enter author name" />
                    <Button fx:id="searchBookButton" text="Search" onAction="#handleSearchBook" styleClass="action-button"/>
                </HBox>

                <!-- Book Table -->
                <TableView fx:id="bookTable" prefHeight="200.0">
                    <columns>
                        <TableColumn fx:id="titleColumn" prefWidth="200.0" text="Title" />
                        <TableColumn fx:id="authorColumn" prefWidth="200.0" text="Author" />
                        <TableColumn fx:id="isbnColumn" prefWidth="200.0" text="ISBN" />
                    </columns>
                </TableView>
            </VBox>

            <!-- Borrow Book Section -->
            <VBox spacing="10.0" styleClass="section">
                <Label text="Borrow Book" styleClass="section-title">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>

                <!-- Borrow Button -->
                <HBox spacing="10.0">
                    <Button fx:id="borrowBookButton" text="Borrow Selected Book" onAction="#handleBorrowBook" styleClass="borrow-button"/>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <!-- Logout Button at the bottom right -->
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" style="-fx-padding: 10px;" prefHeight="50.0">
            <Button fx:id="logoutButton" text="Logout" styleClass="logout-button" onAction="#handleLogout"/>
        </HBox>
    </bottom>

</BorderPane>
